// ãƒãƒƒãƒ—ã‚¢ãƒƒãƒ—è¡¨ç¤ºé–¢æ•°
function openAreaPopup() {
  const popup = document.getElementById('area-popup');
  const overlay = document.getElementById('ev-overlay');

  if (popup && overlay) {
    popup.style.display = 'block';
    overlay.style.display = 'block';
    document.body.classList.add('popup-open');
    backToMainMenu();
    centerPopup();
  }
}

// ãƒãƒƒãƒ—ã‚¢ãƒƒãƒ—ã‚’ä¸­å¤®ã«é…ç½®ã™ã‚‹é–¢æ•°
function centerPopup() {
  const popup = document.getElementById('area-popup');
  if (!popup || popup.style.display === 'none') return;

  const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
  const viewportHeight = window.innerHeight;
  const popupRect = popup.getBoundingClientRect();
  const popupHeight = popupRect.height;
  const headerOffset = 100; // èª¿æ•´å€¤

  const top = scrollTop + (viewportHeight - popupHeight) / 2 - headerOffset;

  popup.style.left = '50%';
  popup.style.transform = 'translateX(-50%)';
  popup.style.top = `${Math.max(scrollTop + 20, top)}px`;
}

// ãƒãƒƒãƒ—ã‚¢ãƒƒãƒ—ã‚’é–‰ã˜ã‚‹é–¢æ•°
function closeAreaPopup() {
  const popup = document.getElementById('area-popup');
  const overlay = document.getElementById('ev-overlay');
  
  if (popup && overlay) {
    popup.style.display = 'none';
    overlay.style.display = 'none';
    document.body.classList.remove('popup-open');
    setTimeout(backToMainMenu, 300);
  }
}

// ãƒ¡ã‚¤ãƒ³ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã«æˆ»ã‚‹é–¢æ•°
function backToMainMenu() {
  document.querySelectorAll('.region-content').forEach(el => el.classList.remove('active'));
  document.querySelectorAll('.region-list button').forEach(button => button.classList.remove('active'));
  
  const mainMenu = document.getElementById('main-menu');
  if (mainMenu) {
    mainMenu.classList.remove('hidden');
  }
  
  document.querySelectorAll('.back-to-menu').forEach(button => {
    button.style.display = 'none';
  });
}

// ãƒªãƒ¼ã‚¸ãƒ§ãƒ³ã‚’è¡¨ç¤ºã™ã‚‹é–¢æ•°
function showRegion(region) {
  const mainMenu = document.getElementById('main-menu');
  const regionElement = document.getElementById(region);
  
  if (mainMenu) {
    mainMenu.classList.add('hidden');
  }
  
  document.querySelectorAll('.region-content').forEach(el => el.classList.remove('active'));
  
  if (regionElement) {
    regionElement.classList.add('active');
    const backButton = regionElement.querySelector('.back-to-menu');
    if (backButton) {
      backButton.style.display = 'flex';
    }
  }

  if (window.event && window.event.target) {
    document.querySelectorAll('.region-list button').forEach(button => {
      button.classList.remove('active');
    });
    window.event.target.classList.add('active');
  }
}

