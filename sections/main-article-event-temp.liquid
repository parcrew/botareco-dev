  }
  
  // åœ°åŸŸé¸æŠãƒœã‚¿ãƒ³ã®ã‚¤ãƒ™ãƒ³ãƒˆã‚’è¨­å®š
  const regionButtons = document.querySelectorAll('.region-list button');
  regionButtons.forEach(button => {
    const regionName = button.getAttribute('onclick');
    if (regionName && regionName.includes('showRegion')) {
      const regionMatch = regionName.match(/showRegion\('([^']+)'\)/);
      if (regionMatch && regionMatch[1]) {
        button.onclick = function() {
