// ã‚¤ãƒ™ãƒ³ãƒˆã®æ—¥ä»˜ã‚’å–å¾—ã™ã‚‹é–¢æ•°
function getEventDates() {
  const eventSections = document.querySelectorAll('.event-section');
  const eventDates = [];

  eventSections.forEach(section => {
    const heading = section.querySelector('h2');
    if (heading) {
      const headingText = heading.textContent;
      const matches = headingText.match(/[A-Z]{3}\s+(\d+)\s+([A-Z]{3})/i);
      if (matches) {
        const day = parseInt(matches[1]);
        const monthText = matches[2];
        const monthIndex = MONTHS.findIndex(m => 
          monthText.toUpperCase().includes(m) || m.includes(monthText.toUpperCase())
        );
        if (monthIndex !== -1) {
          const today = new Date();
          const eventDate = new Date(today.getFullYear(), monthIndex, day);
          eventDates.push({
            date: eventDate,
            id: section.id,
            formattedDate: `${day.toString().padStart(2, '0')}-${monthIndex + 1}-${today.getFullYear()}`
          });
        }
      }
    }
  });
  return eventDates;
}

